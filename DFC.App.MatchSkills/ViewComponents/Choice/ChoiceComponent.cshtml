@model DFC.App.MatchSkills.ViewComponents.Choice.ChoiceComponentModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, DFC.Personalisation.CommonUI

<div class="govuk-form-group">
    <form method="post" id="@($"{@Model.PageId}_Form_RadioForm")">
        <fieldset class="govuk-fieldset govuk-!-margin-bottom-6">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">

                <govukHeadingH1 text="Have you worked before?" additional-class="govuk-fieldset__heading"></govukHeadingH1>
            </legend>
            <span id="sign-in-hint" class="govuk-hint">
                @Model.Text
            </span>


            @foreach (var radioButton in Model.RadioButtons)
            {
                <govukRadioButton id="@($"{Model.PageId}govukRadioButtonRadio{radioButton.Text}")" name="@radioButton.Name" value="@radioButton.Text">
                    <govukRadioLabel text="@radioButton.Text"></govukRadioLabel>
                </govukRadioButton>
            }
        </fieldset>
        <govukButton text="@Model.ButtonText" disabled="false"></govukButton>
    </form>
</div>
