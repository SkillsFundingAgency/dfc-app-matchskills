@using DFC.App.MatchSkills.Models
@using DFC.App.MatchSkills.ViewComponents.Choice
@model DFC.App.MatchSkills.ViewModels.RouteCompositeViewModel

@{
    var choiceModel = new ChoiceComponentModel
    {
        ButtonText = "Continue",
        LinkText = "TestLink",
        Text = "Choose one of the options below.",
        FormAction = $"{Model.Id}",
        ParentModel = Model,
        HasError = Model.HasError,
        ErrorMessage = "Choose an option for career matching",
        ErrorSummaryMessage = "Choose an option for career matching",
        RadioButtons = new List<RadioButtonModel>
{
    {
        new RadioButtonModel
        {
            Text = "Your current or previous jobs", Order = 1,
            Name = "Choice", Value = Route.Jobs.ToString(),
            HintText = "See careers that might suit your skills. This will take between 3 and 5 minutes.",
            Checked = Model.RouteIncludesDysac.HasValue && !Model.RouteIncludesDysac.Value
        }
    },
            {new RadioButtonModel
            {
                Text = "Your interests, motivations and current or previous jobs", Order = 2, Name = "Choice",
                Value = Route.JobsAndSkills.ToString(),
                HintText = "See careers that might suit your personal traits and skills. This will take between 5 and 10 minutes.",
                Checked = Model.RouteIncludesDysac.HasValue && Model.RouteIncludesDysac.Value
            }}

        }
    };

}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <govukBackLink LinkHref="#" LinkTitle="BackLink" Id="BackLink" class="hideBackButton"></govukBackLink>
    </div>
</div>
<div class="govuk-grid-column-two-thirds">

    <div class="govuk-grid-row">
        <partial name="~/ViewComponents/Choice/ChoiceComponent.cshtml" model="choiceModel" />
    </div>
</div>
