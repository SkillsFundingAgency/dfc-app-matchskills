@{
    ViewData["Title"] = "Occupation Search Results";
    String search = Context.Request.Query["EnterJobInputSearch"].ToString()??"";
    String altLabels = Context.Request.Query["EnterJobChkAltLabels"].ToString()??"false";
}


<div class="govuk-main-wrapper " id="main-content" role="main">

<div class="govuk-grid-row margin-reset">
    <div class="govuk-grid-column-two-thirds">
        <div class="results">
            <govukHeadingH1 Text="Select your occupation" />
        </div>

        @await Component.InvokeAsync(nameof(DFC.App.MatchSkills.ViewComponents.SearchOccupationResults), new { occupation = @search, altLabels = @altLabels=="on"})
        <br />
        <govukButton Id="JobSearchResultsBtnSelecOccupation" Text="Select"></govukButton>
    </div>
</div>
</div>
